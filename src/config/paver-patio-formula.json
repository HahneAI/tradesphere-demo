  "formula": {
    "description": "Calculation uses base settings (labor rate, material cost, service charge) modified by multipliers and additional costs",
    "basePrice": 15.50,
    "basePriceCalculation": "(baseLaborRate * avgLaborHours + baseMaterialCost) * (1 + profitMarginTarget) + baseServiceCharge",
    "finalCalculation": "calculatedBasePrice * tearoutMultiplier * accessDifficulty * paverStyle * cuttingComplexity * degree45Factor * teamSize * teamEfficiency * projectComplexity + equipmentCategory + obstacleRemoval",
    "avgLaborHours": 8.5,
    "notes": "basePrice will be dynamically calculated from baseSettings when admin makes changes"
  }
