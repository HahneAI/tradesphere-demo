{
  "name": "field-service-management",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start-server": "node server.js",
    "tunnel": "ngrok http 3001",
    "test:parity": "tsx src/tests/run-tests.ts",
    "test:pricing": "tsx src/tests/pricing-agent.test.ts",
    "test:mock": "cross-env MOCK_MODE=true tsx src/tests/mock-runner.ts",
    "test:debug": "cross-env MOCK_MODE=true tsx --inspect-brk=9229 src/tests/mock-runner.ts",
    "test:mock:multi": "cross-env MOCK_MODE=true TEST_CASE=multi tsx src/tests/mock-runner.ts",
    "test:mock:simple": "cross-env MOCK_MODE=true TEST_CASE=simple tsx src/tests/mock-runner.ts",
    "test:benchmark": "cross-env MOCK_MODE=true BENCHMARK_MODE=true tsx src/tests/mock-runner.ts",
    "test:parity:mock": "cross-env MOCK_MODE=true PARITY_CHECK=true tsx src/tests/mock-runner.ts",
    "test:mock:pure": "tsx src/tests/mock-only-runner.ts",
    "test:benchmark:pure": "tsx src/tests/mock-only-runner.ts --benchmark",
    "test:pipeline": "tsx src/tests/pipeline-test.ts",
    "test:pipeline:mock": "cross-env PIPELINE_MODE=mock tsx -r dotenv/config src/tests/pipeline-test.ts",
    "test:pipeline:debug": "cross-env PIPELINE_MODE=mock PIPELINE_DEBUG=true tsx -r dotenv/config src/tests/pipeline-test.ts",
    "test:logic:verify": "tsx src/tests/business-logic-verify.ts",
    "test:edge-cases": "tsx src/tests/edge-case-tests.ts",
    "test:integration": "tsx src/tests/integration-test.ts",
    "test:real-logic": "tsx src/tests/real-logic-test.ts",
    "test:env": "tsx -r dotenv/config -e \"import('./src/utils/environment-validator.ts').then(m => m.EnvironmentValidator.logEnvironmentStatus())\"",
    "test:comprehensive": "tsx src/tests/comprehensive-multi-service-debug.ts",
    "test:gpt": "tsx src/tests/gpt-enhanced-test.ts",
    "test:gpt:traditional": "cross-env TEST_MODE=traditional tsx src/tests/gpt-enhanced-test.ts",
    "test:gpt:enhanced": "cross-env TEST_MODE=gpt tsx -r dotenv/config src/tests/gpt-enhanced-test.ts",
    "test:gpt:comparison": "cross-env TEST_MODE=comparison tsx -r dotenv/config src/tests/gpt-enhanced-test.ts",
    "test:gpt-splitter": "tsx -r dotenv/config src/tests/gpt-splitter-test.ts",
    "test:conversation": "tsx -r dotenv/config src/tests/conversation-context-test.ts",
    "test:conversation:debug": "tsx -r dotenv/config --inspect-brk=9229 src/tests/conversation-context-test.ts",
    "test:multi-user": "tsx src/tests/multi-user-beta-test.ts",
    "test:sales-personality": "tsx -r dotenv/config src/tests/sales-personality-test.ts",
    "test:parameter-collector": "tsx -r dotenv/config src/tests/parameter-collector-test.ts",
    "test:pricing-calculator": "tsx -r dotenv/config src/tests/pricing-calculator-test.ts",
    "test:netlify-function": "tsx -r dotenv/config src/tests/netlify-function-test.ts",
    "test:sheets-inspector": "tsx -r dotenv/config src/tests/sheets-inspector.ts"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "lucide-react": "^0.344.0",
    "ngrok": "^5.0.0-beta.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-speech-recognition": "^4.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^1.0.2"
  }
}
